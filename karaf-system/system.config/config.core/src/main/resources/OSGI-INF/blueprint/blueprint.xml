<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" xmlns:enc="http://karaf.apache.org/xmlns/jasypt/v1.0.0">

    <cm:property-placeholder persistent-id="io.github.vm.patlego.runmodes.runmode" update-strategy="reload">
      <cm:default-properties>
        <cm:property name="run.mode" value="" />
      </cm:default-properties>
    </cm:property-placeholder>
  
    <bean id="runModeBean" class="io.github.vm.patlego.runmodes.RunModeBean">
      <property name="runmode" value="${run.mode}" />
    </bean>
  
    <bean id="runModeService" class="io.github.vm.patlego.runmodes.RunModeImpl" init-method="init">
      <property name="runModeBean" ref="runModeBean" />
    </bean>
  
    <service ref="runModeService" interface="io.github.vm.patlego.runmodes.RunMode"/>
  
  </blueprint>