<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.github.vm.patlego</groupId>
    <artifactId>karaf-system</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <groupId>io.github.vm.patlego</groupId>
  <artifactId>system.features</artifactId>
  <packaging>pom</packaging>
  <name>System Features</name>

  <properties>
    <postgres.db>karaf_db</postgres.db>

    <!-- PSQL DEV VALUES -->
    <postgres.dev.url>jdbc:postgresql://postgres-db:5432</postgres.dev.url>
    <postgres.dev.username>karaf</postgres.dev.username>
    <postgres.dev.password>karaf_pwd</postgres.dev.password>

    <!-- PSQL ECS VALUES -->
    <postgres.ecs.url>jdbc:postgresql://pat-lego-db.ch5m6ge8f6p2.ca-central-1.rds.amazonaws.com:5432</postgres.ecs.url>
    <postgres.ecs.username>karaf</postgres.ecs.username>
    <postgres.ecs.password></postgres.ecs.password>
  </properties>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
        <targetPath>${project.build.directory}/feature</targetPath>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>resources</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>target/feature/features.xml</file>
                  <type>xml</type>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>dev-build</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-resources-plugin</artifactId>
            <executions>
              <execution>
                <id>copy-features</id>
                <!-- here the phase you need -->
                <phase>validate</phase>
                <goals>
                  <goal>copy-resources</goal>
                </goals>
                <configuration>
                  <outputDirectory>${basedir}/src/main/resources</outputDirectory>
                  <resources>
                    <resource>
                      <directory>src/main/resources/template</directory>
                      <filtering>true</filtering>
                    </resource>
                  </resources>
                  <overwrite>true</overwrite>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>com.google.code.maven-replacer-plugin</groupId>
            <artifactId>replacer</artifactId>
            <executions>
              <execution>
                <phase>validate</phase>
                <goals>
                  <goal>replace</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <includes>
                <include>${project.build.directory}/features.xml</include>
                <include>${basedir}/src/main/resources/features.xml</include>
              </includes>
              <replacements>
                <replacement>
                  <token>%postgres.password%</token>
                  <value>${postgres.dev.password}</value>
                </replacement>
                <replacement>
                  <token>%postgres.username%</token>
                  <value>${postgres.dev.username}</value>
                </replacement>
                <replacement>
                  <token>%postgres.url%</token>
                  <value>${postgres.dev.url}</value>
                </replacement>
                <replacement>
                  <token>%postgres.db%</token>
                  <value>${postgres.db}</value>
                </replacement>
              </replacements>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>ecs-build</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-resources-plugin</artifactId>
            <executions>
              <execution>
                <id>copy-features</id>
                <!-- here the phase you need -->
                <phase>validate</phase>
                <goals>
                  <goal>copy-resources</goal>
                </goals>
                <configuration>
                  <outputDirectory>${basedir}/src/main/resources</outputDirectory>
                  <resources>
                    <resource>
                      <directory>src/main/resources/template</directory>
                      <filtering>true</filtering>
                    </resource>
                  </resources>
                  <overwrite>true</overwrite>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>com.google.code.maven-replacer-plugin</groupId>
            <artifactId>replacer</artifactId>
            <executions>
              <execution>
                <phase>validate</phase>
                <goals>
                  <goal>replace</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <includes>
                <include>${basedir}/src/main/resources/features.xml</include>
              </includes>
              <replacements>
                <replacement>
                  <token>%postgres.password%</token>
                  <value>${postgres.ecs.password}</value>
                </replacement>
                <replacement>
                  <token>%postgres.username%</token>
                  <value>${postgres.ecs.username}</value>
                </replacement>
                <replacement>
                  <token>%postgres.url%</token>
                  <value>${postgres.ecs.url}</value>
                </replacement>
                <replacement>
                  <token>%postgres.db%</token>
                  <value>${postgres.db}</value>
                </replacement>
              </replacements>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
